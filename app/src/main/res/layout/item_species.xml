<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/rounded_background"
    android:layout_margin="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFEBEE"
        android:padding="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_temperature_max"
        android:contentDescription="Température maximale" />

    <TextView
        android:id="@+id/speciesMaxTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10°C"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginStart="8dp"/>
</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#E3F2FD"
    android:padding="4dp"
    android:layout_marginTop="4dp"
    android:gravity="center_vertical">

<ImageView
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:src="@drawable/ic_temperature_min"
    android:contentDescription="Température minimale" />

<TextView
    android:id="@+id/speciesMinTemperature"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="-20°C"
    android:textColor="#000000"
    android:textSize="14sp"
    android:layout_marginStart="8dp"/>
    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#E0F7FA"
    android:padding="4dp"
    android:layout_marginTop="4dp"
    android:gravity="center_vertical">

<ImageView
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:src="@drawable/ic_humidity"
    android:contentDescription="Humidité maximale" />

<TextView
    android:id="@+id/speciesMaxHumidity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="60%"
    android:textColor="#000000"
    android:textSize="14sp"
    android:layout_marginStart="8dp"/>
    </LinearLayout>

<TextView
    android:id="@+id/speciesName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Nom de l'espèce"
    android:textColor="#5A4FCF"
    android:textSize="16sp"
    android:background="#F5F5F5"
    android:layout_marginTop="8dp"
    android:padding="4dp"/>
</LinearLayout>